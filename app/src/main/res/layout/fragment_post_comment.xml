<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="ru.vnn.nick.italent.fragments.PostCommentFragment">
    <ImageView
        android:id="@+id/iv_comment_author"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="top"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_comment_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|start"
                android:textSize="12sp"
                android:fontFamily="@font/sfuitextregular"
                android:text="tasha_888"
                android:textColor="@color/searchTextActiveColor"/>

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|end"
                android:textColor="@color/semiwhite"
                android:fontFamily="@font/sfuitextlight"
                android:textSize="12sp"
                android:text="15 min ago"
                android:layout_marginEnd="20dp"/>
        </FrameLayout>
        
        <TextView
            android:id="@+id/tv_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sfuitextlight"
            android:textColor="@color/semiwhite"
            android:textSize="14sp"
            android:text="nice!!!"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/textline"
            android:backgroundTint="@color/semiwhite"/>

    </LinearLayout>

</LinearLayout>