<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context="ru.vnn.nick.italent.fragments.PostInfoFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_post_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/login_italent_logo"/>

        <TextView
            android:id="@+id/tv_post_talent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:fontFamily="@font/sfuitextregular"
            android:text="Swimming"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rectangle_talent_label"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="10dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_post_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sfuitextregular"
                    android:lines="1"
                    android:maxLines="2"
                    android:text="Just do it"
                    android:textColor="@color/searchTextActiveColor"
                    android:textSize="18sp" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp">

                <TextView
                    android:id="@+id/tv_post_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sfuitextlight"
                    android:text="vganshin, 3.14h ago"
                    android:textColor="@color/semiwhite"
                    android:maxLines="2"
                    android:maxWidth="150dp"
                    android:textSize="14sp" />

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_marginEnd="50dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_comment_count"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:text="0"
                            android:textAlignment="center"
                            android:textColor="@color/semiwhite"
                            android:fontFamily="@font/sfuitextlight"
                            android:textSize="14sp" />

                        <ImageButton
                            android:id="@+id/ib_comment_image"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/comment"
                            android:backgroundTint="@color/semiwhite"/>


                        <TextView
                            android:id="@+id/tv_like_count"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:text="0"
                            android:textAlignment="center"
                            android:textColor="@color/semiwhite"
                            android:fontFamily="@font/sfuitextlight"
                            android:textSize="14sp" />

                        <ImageButton
                            android:id="@+id/ib_like_image"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/inactive_like"
                            android:backgroundTint="@color/semiwhite"/>
                    </LinearLayout>
                </FrameLayout>


            </FrameLayout>

        </LinearLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="20dp">

            <ImageView
                android:id="@+id/iv_post_author"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:contentDescription="@string/post_author"
                android:scaleType="centerCrop"
                android:src="@drawable/avatar" />
        </FrameLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/textline"
        android:backgroundTint="@color/semiwhite"/>

</LinearLayout>