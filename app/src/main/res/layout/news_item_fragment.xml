<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="250dp"
    tools:context="ru.vnn.nick.italent.fragments.PostFragment">

    <ImageView
        android:id="@+id/iv_post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:paddingBottom="10dp"
        android:background="@drawable/vertical_gradient">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="start"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/tv_post_talent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/sfuitextregular"
                            android:text="Swimming"
                            android:paddingBottom="2dp"
                            android:paddingTop="2dp"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:background="@drawable/rectangle_talent_label"
                            android:textColor="@color/white"
                            android:textSize="12sp" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_marginStart="10dp"
                                android:layout_weight="1">

                                <TextView
                                    android:id="@+id/tv_post_title"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/sfuitextregular"
                                    android:lines="1"
                                    android:maxLines="2"
                                    android:text="Just do it"
                                    android:textColor="@color/white"
                                    android:textSize="18sp" />
                            </FrameLayout>

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp">

                                <TextView
                                    android:id="@+id/tv_post_author"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/sfuitextlight"
                                    android:text="vganshin, 3.14h ago"
                                    android:textColor="@color/white"
                                    android:maxLines="2"
                                    android:textSize="12sp" />

                                <FrameLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="right"
                                    android:layout_marginEnd="50dp">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/tv_comment_count"
                                            android:layout_width="20dp"
                                            android:layout_height="20dp"
                                            android:text="0"
                                            android:textAlignment="center"
                                            android:textColor="@color/white"
                                            android:fontFamily="@font/sfuitextlight"
                                            android:textSize="14sp" />

                                        <ImageButton
                                            android:id="@+id/ib_comment_image"
                                            android:layout_width="20dp"
                                            android:layout_height="20dp"
                                            android:background="@drawable/comments"/>


                                        <TextView
                                            android:id="@+id/tv_like_count"
                                            android:layout_width="20dp"
                                            android:layout_height="20dp"
                                            android:text="0"
                                            android:textAlignment="center"
                                            android:textColor="@color/white"
                                            android:fontFamily="@font/sfuitextlight"
                                            android:textSize="14sp" />

                                        <ImageView
                                            android:id="@+id/iv_like_image"
                                            android:layout_width="20dp"
                                            android:layout_height="20dp"
                                            android:adjustViewBounds="true"
                                            android:src="@drawable/not_liked"/>
                                    </LinearLayout>
                                </FrameLayout>


                            </FrameLayout>

                        </LinearLayout>
                    </FrameLayout>

                </LinearLayout>
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp">

                <ImageView
                    android:id="@+id/iv_post_author"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:contentDescription="@string/post_author"
                    android:scaleType="centerCrop"
                    android:src="@drawable/avatar" />
            </FrameLayout>
        </LinearLayout>

    </FrameLayout>

</FrameLayout>
